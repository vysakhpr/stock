<%= link_to "Add Lab", "labid/new" %>

<div class="alert alert-info" style= "width:75%" >
	<div style="width:100%;height:300px;overflow:scroll">
<table class="table table-striped table-condensed table-responsive office_stock" >
	<thead>
		STOCK
		<tr>
		 <th><%= sortable "date","Date" %></th>
		 <th><%= sortable"voucher_no.","Voucher No" %></th>
		 <th><%= sortable "department","Department" %></th>
		 <th><%= sortable "name","Name" %></th>
		 <th><%= sortable "description","Description" %></th>
		 <th><%= sortable "price_unit","Price Unit" %></th>
		 <th><%= sortable "quantity","Quantity" %></th>
		 <th><%= sortable "total_price","Total Price" %></th>
		 <th>Quantity Remaining</th>
		</tr>
	</thead>
	<tbody>
		<% @hods.each do |t| %>
			<tr>
				<td><%=t.date%></td>
				<td><%=t.voucher_no%></td>
				<td><%=t.department%></td>
				<td><%=link_to t.name, "lab/new/#{t.id}", :method => :post %></td>
				<td><%=t.description%></td>
				<td><%=t.price_unit%></td>
				<td><%=t.quantity%></td>
				<td><%=t.total_price%></td>
				<td><%=t.quantity-t.quantity_assigned%></td>
			</tr>
		<%end%>  
	</tbody>
</table>
</div>
</div>
