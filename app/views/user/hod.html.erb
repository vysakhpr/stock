<%= link_to "Add Lab", "labid/new" %>

<div class="alert alert-info" style= "width:89%" >
	<div style="width:100%;height:300px;overflow:scroll">
<table class="table table-striped table-condensed table-responsive office_stock" >
	<thead>
		STOCK
		<tr>
		 <th style="width:80px"><%= sortable "date","Date" %></th>
		 <th style="width:30px"><%= sortable"voucher_no.","Voucher No" %></th>
		 <th style="width:30px"><%= sortable "department","Department" %></th>
		 <th style="width:30px"><%= sortable "name","Name" %></th>
		 <th style="width:30px"><%= sortable "description","Description" %></th>
		 <th style="width:30px"><%= sortable "price_unit","Price Unit" %></th>
		 <th style="width:30px"><%= sortable "quantity","Quantity" %></th>
		 <th style="width:30px"><%= sortable "total_price","Total Price" %></th>
		 <th>Remaining</th>
		</tr>
	</thead>
	<tbody>
		<% @hods.each do |t| %>
			<tr>
				<td><%=t.date%></td>
				<td><%=t.voucher_no%></td>
				<td><%=t.department%></td>
				<td><%=t.name %></td>
				<td><%=t.description%></td>
				<td><%=t.price_unit%></td>
				<td><%=t.quantity%></td>
				<td><%=t.total_price%></td>
				<td><%=t.quantity-t.quantity_assigned%></td>
				<td><%= link_to "Assign","lab/new/#{t.id}", :method=> :post, :class=>"btn btn-info btn-mini" %></td> 
				<td><%= link_to "Details","office/show/#{t.id}", :method=> :post, :class=>"btn btn-info btn-mini" %></td> 
			</tr>
		<%end%>  
	</tbody>
</table>
</div>
</div>
